{#
/**
 * @file
 * Theme override for the corporate European Commission Core footer block.
 *
 * Available variables:
 * - site_owner: Site's owner.
 * - site_specific_footer: renderable array for site specific footer links
 * - corporate_footer: renderable array for corporate footer links
 * @see ./module/contrib/oe_corporate_blocks/templates/oe-corporate-blocks-ec-footer.html.twig
 */
#}



{% extends "@oe_theme/navigation/oe-corporate-blocks-ec-footer--standardised.html.twig" %}

{% block content %}
  {% set _top_row = [
    [
      {
        'title': {
        'link': {
          'label': site_specific_footer.site_identity,
          'path': url('<front>'),
        }
      },
        'description': site_owner ? 'This site is managed by the @name'|t({'@name': site_owner}) : "Now owner set"|t,
      }
    ],
    _top_left_column,
    _top_right_column
  ] %}
  {{ parent() }}
  <div class="ecl-site-footer">
    <div class="ecl-container ecl-site-footer__container">
      Some extra content
    </div>
  </div>
{% endblock %}
